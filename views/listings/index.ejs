<% layout("/layouts/boilerplate.ejs") %>

<body>
    <h3>All Listings</h3>

    <!-- row-cols-lg-3 meaning 3 columns on large screen 
        row-cols-md-2 meaning 2 columns on medium screen 
        row-cols-sm-1 meaning 1 column on small screen
        row-cols-1 meaning 1 column on extra small screen
    -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing image" style="height: 20em;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %> <br></b>
                            &#36;<%= listing.price.toLocaleString("en-US") %>/night
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
</body>